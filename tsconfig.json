{
  "exclude": ["node_modules", "test"],
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "rootDir": "./api/src",
    "outDir": "./api/dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
